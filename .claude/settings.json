{
  "permissions": {
    "allow": [
      "Read(**/*)",
      "Read(/tmp/starforge-master-test/**)",
      "Write(/tmp/starforge-master-test/**)",
      "Edit(/tmp/starforge-master-test/**)",
      "Grep(**/*)",
      "Glob(**/*)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(npm *)",
      "Bash(pytest *)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(node *)",
      "Bash(jq *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(sed *)",
      "Bash(awk *)",
      "Bash(pwd *)",
      "Bash(cd *)",
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(rm *)",
      "Bash(echo *)",
      "Bash(date *)",
      "Bash(basename *)",
      "Bash(dirname *)",
      "Bash(readlink *)",
      "Bash(source *)",
      "Bash(chmod *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(tr *)",
      "Bash(cut *)",
      "Bash(perl *)",
      "Bash(sleep *)",
      "Bash(time *)",
      "Bash(which *)",
      "Bash(whoami *)",
      "Bash(uname *)",
      "Bash(env *)",
      "Bash(export *)",
      "Bash(set *)",
      "Bash(test *)",
      "Bash([ *)",
      "Bash(xargs *)",
      "Bash(tee *)",
      "Bash(./bin/test-* *)",
      "Bash(starforge *)",
      "Bash(claude *)",
      "Bash(/tmp/starforge-master-test/.claude/scripts/* *)"
    ],
    "deny": [
      "Bash(rm -rf /:*)",
      "Bash(rm -rf ~:*)",
      "Bash(rm -rf /Users:*)",
      "Bash(rm -rf /tmp/starforge-master-test/.git:*)",
      "Bash(rm -rf .git:*)",
      "Bash(git push --force origin main:*)",
      "Bash(git push -f origin main:*)",
      "Bash(git push --force-with-lease origin main:*)",
      "Bash(git reset --hard origin/main:*)",
      "Bash(git checkout main && git reset:*)"
    ],
    "ask": [
      "Bash(sudo *)",
      "Bash(su *)",
      "Bash(chmod +x /usr/* *)",
      "Bash(chown *)",
      "Bash(kill *)",
      "Bash(killall *)",
      "Bash(shutdown *)",
      "Bash(reboot *)",
      "Bash(dd *)",
      "Bash(mkfs *)",
      "Bash(fdisk *)",
      "Bash(diskutil *)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/tmp/starforge-master-test/.claude/hooks/block-main-edits.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/tmp/starforge-master-test/.claude/hooks/block-main-bash.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/tmp/starforge-master-test/.claude/hooks/stop.py"
          }
        ]
      }
    ]
  }
}
